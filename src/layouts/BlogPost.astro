---
import type { CollectionEntry } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import FormattedDate from '../components/FormattedDate.astro';
import Header from '../components/Header.astro';

type Props = CollectionEntry<'blog'>['data'];

const { title, description, pubDate, updatedDate, heroImage, seo } = Astro.props;
const siteBase = Astro.site ? new URL(Astro.site).toString() : '';
const canonicalUrl = seo?.canonical ? new URL(seo.canonical, Astro.site).toString() : undefined;
const canonical = canonicalUrl && siteBase && canonicalUrl.startsWith(siteBase) ? canonicalUrl : undefined;
---

<html lang="ko">
	<head>
		<BaseHead
			title={seo?.ogTitle ?? title}
			description={seo?.ogDescription ?? description}
			image={heroImage?.src}
			canonical={canonical}
			ogTitle={seo?.ogTitle}
			ogDescription={seo?.ogDescription}
		/>
		<style>
			main {
				width: calc(100% - 2em);
				max-width: 100%;
				margin: 0;
			}
			article {
				width: 960px;
				max-width: calc(100% - 2em);
				margin: 0 auto;
				padding: 3em 0 4em;
			}
			.hero-image {
				width: 100%;
				margin: 0 auto;
				padding: 0;
			}
			.hero-image img {
				display: block;
				margin: 0 auto;
				border-radius: 18px;
				border: 1px solid rgba(var(--border), 0.9);
				box-shadow: var(--box-shadow);
			}
			.prose {
				width: 100%;
				max-width: 100%;
				margin: 0;
				padding: 2.2em 0 0;
				color: rgb(var(--gray-dark));
			}
			.title {
				margin-bottom: 1.5em;
				padding: 1.2em 0;
				text-align: left;
				line-height: 1;
			}
			.title h1 {
				margin: 0 0 0.5em 0;
			}
			.date {
				margin-bottom: 0.5em;
				color: rgb(var(--gray));
			}
			.last-updated-on {
				font-style: italic;
			}
		</style>
	</head>

	<body>
		<Header />
		<main>
			<article>
				<div class="hero-image">
					{heroImage && (
						<img src={heroImage.src} alt={heroImage.alt ?? ''} loading="lazy" decoding="async" />
					)}
				</div>
				<div class="prose">
					<div class="title">
						<div class="date">
							<FormattedDate date={pubDate} />
							{
								updatedDate && (
									<div class="last-updated-on">
										마지막 업데이트: <FormattedDate date={updatedDate} />
									</div>
								)
							}
						</div>
						<h1>{title}</h1>
						<hr />
					</div>
					<slot />
				</div>
			</article>
		</main>
		<Footer />
	</body>
</html>
