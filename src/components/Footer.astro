---
import { SITE_TITLE } from '../consts';

const today = new Date();
---

<footer>
	<div class="footer-brand">
		<span class="brand-mark" aria-hidden="true"></span>
		<span class="brand-text">{SITE_TITLE}</span>
	</div>
	<p class="footer-meta">&copy; {today.getFullYear()} {SITE_TITLE}. 모든 권리 보유.</p>
	<nav class="footer-links">
		<a href="/">홈</a>
		<a href="/blog">블로그</a>
		<a href="/about">소개</a>
		<a href="/contact">문의</a>
		<a href="/privacy">개인정보 처리방침</a>
		<a href="/terms">이용약관</a>
	</nav>
</footer>
<style>
	footer {
		padding: 2.5em 1.5em 3em;
		background: transparent;
		border-top: none;
		color: rgb(var(--gray));
		text-align: center;
		margin-top: auto;
	}
	.footer-brand {
		display: inline-flex;
		align-items: center;
		gap: 0.6em;
		color: rgb(var(--black));
		font-weight: 600;
		letter-spacing: -0.01em;
		font-size: 0.95em;
	}
	.footer-meta {
		margin: 0.4em 0 1.2em;
		font-size: 0.9em;
	}
	.brand-mark {
		width: 12px;
		height: 12px;
		border-radius: 999px;
		background: linear-gradient(145deg, #1d4ed8, #60a5fa);
		box-shadow: 0 6px 14px rgba(37, 99, 235, 0.2);
	}
	.footer-links {
		display: flex;
		justify-content: center;
		gap: 1.5em;
		margin-top: 1em;
		flex-wrap: wrap;
	}
	.footer-links a {
		text-decoration: none;
		color: rgb(var(--gray-dark));
		font-weight: 500;
		font-size: 0.92em;
	}
	.footer-links a:hover {
		color: rgb(var(--black));
		text-decoration: underline;
		text-underline-offset: 4px;
	}
	@media (max-width: 720px) {
		footer {
			padding: 2em 1em 1.5em;
		}
	}
</style>
